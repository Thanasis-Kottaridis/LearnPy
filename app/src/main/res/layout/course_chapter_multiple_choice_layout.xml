<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseTitleContainer"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/showExplanation_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="35dp"
                android:text="TEST TESTTEST TESTTEST TESTTEST TESTTEST TESTTEST TESTTEST TESTTEST TESTTEST "
                android:textColor="@color/learnPyDarkBlue"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/whatIsTheOutputOfThisCode_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showExplanation_textView"
                android:layout_marginStart="15dp"
                android:text="What is the output of this code?"
                android:textColor="@color/learnPyDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/displayCode_WebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whatIsTheOutputOfThisCode_textView"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/selectTheOutput_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/displayCode_WebView"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:text="SELECT THE OUTPUT"
                android:textColor="@color/learnPyDarkBlue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/answer1_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectTheOutput_textView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@color/learnPyDarkBlue"
                android:padding="15dp"
                android:text="ans1"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />


            <Button
                android:id="@+id/answer2_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer1_Button"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/learnPyDarkBlue"
                android:padding="15dp"
                android:text="ans2"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />

            <Button
                android:id="@+id/answer3_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer2_Button"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/learnPyDarkBlue"
                android:padding="15dp"
                android:text="ans3"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />

            <Button
                android:id="@+id/check_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer3_Button"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/learnPyYellow"
                android:text="Check"
                android:textAllCaps="false"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>